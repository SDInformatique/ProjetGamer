
@{
    ViewBag.Title = "CpuChoice";

    if (IsPost)
    {
        var selectedCpu = Request.Form["chooseItem"];
        Session.Add("selectedCpu", selectedCpu);
        Response.Redirect("~/ConfigComponents");
    }
}
<script>
    function chooseItem(id) {
        $('.selected-item').removeClass('selected-item');
        $('.disabled').removeClass('disabled');

        var selectedItem = document.getElementById("cpu" + id);
        var selectedItemBtn = document.getElementById("btncpu" + id);
        selectedItem.className += " selected-item";
        selectedItemBtn.className += " disabled";
        document.getElementById('hiddenChoosedcpu').value = selectedItem.id; 
    };
    function nextPage() {
        var choosedItem = document.getElementById('hiddenChoosedcpu').value;
        $.post("CpuChoice", {
            chooseItem: choosedItem

        });
    };
</script>
