@{
    ViewBag.Title = "Choix boitier";

    if (IsPost)
    {
        var choosedCase = Request.Form["choosedItem"];
        if(choosedCase != null)
        {
            Session.Add("choosedCaseID",choosedCase);
            Response.Redirect("ConfigPrimaryComponents");
        }
    }
}

